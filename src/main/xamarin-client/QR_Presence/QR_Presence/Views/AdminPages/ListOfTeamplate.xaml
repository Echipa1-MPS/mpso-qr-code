<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QR_Presence.Views.AdminPages.ListOfTeamplate"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             
             BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDark}, Light={StaticResource BackgroundLight}}"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="8,12,8,0" Spacing="16">

            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}">
                <CollectionView x:Name="accountsList"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedElement}"
                            SelectionChanged="accountsList_SelectionChanged_1"
                            ItemsSource="{Binding ListOf}">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1" HorizontalItemSpacing="7" VerticalItemSpacing="7"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems >
                                        <SwipeItemView Command="{Binding Path=BindingContext.Delete, Source={Reference accountsList}}" CommandParameter="{Binding .}" >
                                            <Button Text="trash" CornerRadius="5" FontSize="25" FontFamily="FAS" BackgroundColor="Red"/>
                                        </SwipeItemView>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Frame Style="{StaticResource FrameList}" Padding="4,0,2,0">
                                    <Grid Padding="4,10,8,8" RowSpacing="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <controls:CircleImage Source="{Binding Icon1}" Aspect="AspectFit" BorderColor="{StaticResource AccentYellow}" BorderThickness="2"  FillColor="{Binding BackColor}" Grid.RowSpan="2"  HeightRequest="50" WidthRequest="50" VerticalOptions="Center" HorizontalOptions="Start"/>
                                        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Spacing="8">

                                            <Label Text="{Binding MainTitle}"
                                               FontAttributes="Bold"
                                               FontSize="Medium"
                                               HorizontalOptions="Start"
                                               TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}"
                                               Style="{StaticResource TitleStyle}"/>
                                        </StackLayout>


                                        <StackLayout Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Spacing="8">
                                            <Label Text="{Binding Icon2}" 
                                               FontSize="Small" 
                                               FontFamily="FAS"
                                               TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}" 
                                               VerticalOptions="Center" HorizontalOptions="Center"/>
                                            <Label Text="{Binding SecondTitle}"
                                               Grid.Row="1"
                                               FontAttributes="Italic"
                                               FontSize="Small"
                                               HorizontalOptions="Start"
                                               TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}"
                                               Style="{StaticResource TitleStyle}"/>
                                        </StackLayout>

                                        <Label Grid.Column="1"
                                           Grid.RowSpan="2"
                                       HorizontalOptions="EndAndExpand"
                                       Text="{Binding EndTitle}"
                                       TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}"
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       Style="{StaticResource TitleStyle}"/>
                                    </Grid>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <ContentView>
                            <StackLayout HorizontalOptions="CenterAndExpand"
                                 VerticalOptions="CenterAndExpand">
                                <Label Text="Go to Bill Page and "
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Press "
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource BackgroundDark}, Dark={StaticResource BackgroundLight}}"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>

                                    <Label Text="+"
                                   WidthRequest="20" 
                                   TextColor="{AppThemeBinding Light={StaticResource BackgroundDark}, Dark={StaticResource BackgroundLight}}"
                                   FontAttributes="Bold"
                                   FontSize="34"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                                </StackLayout>
                                <Label Text="for adding new Transaction"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource BackgroundDark}, Dark={StaticResource BackgroundLight}}"
                                   FontSize="18"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center" />

                            </StackLayout>
                        </ContentView>
                    </CollectionView.EmptyView>

                    <CollectionView.Header>
                        <ContentView>
                            <Grid ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <Frame BackgroundColor="{StaticResource AccentDarkBlue} " CornerRadius="15" Padding="0" HorizontalOptions="CenterAndExpand" HeightRequest="45" WidthRequest="500"  Grid.Row="0">
                                    <Label Text="{Binding PageTitle}"
                                    HorizontalOptions="CenterAndExpand"
                                    TextColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundLight}}"
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Style="{StaticResource TitleStyle}"/>
                                </Frame>

                                <Button Grid.Column="1" 
                                    Grid.Row="0"
                                    Text="plus" 
                                    FontSize="24" 
                                    FontFamily="FAS" 
                                    WidthRequest="50"
                                    HeightRequest="50" HorizontalOptions="CenterAndExpand" 
                                    Style="{StaticResource ButtonCheckedStyle}" 
                                    BackgroundColor="{StaticResource AccentLiteBlue}"
                                    BorderColor="{StaticResource AccentYellow}"
                                    BorderWidth="2"
                                    Command="{Binding GoNewElementPage}"
                                    TextColor="{StaticResource AccentYellow}"
                                    CornerRadius="15" />

                                <Button Text="cog" 
                                    FontFamily="FAS" 
                                    FontSize="24" 
                                    CornerRadius="15"
                                    BackgroundColor="{StaticResource AccentLiteBlue}"
                                    BorderColor="{StaticResource AccentYellow}" 
                                    BorderWidth="2"
                                    TextColor="{StaticResource AccentYellow}"
                                    HeightRequest="50" WidthRequest="50" 
                                    Grid.Column="2" 
                                    Clicked="Button_Clicked"
                                    HorizontalOptions="CenterAndExpand"/>

                            </Grid>
                        </ContentView>
                    </CollectionView.Header>
                </CollectionView>
            </RefreshView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>